{
  "include": ["src/**/**.ts", "index.ts"],
  "exclude": ["node_modules", "mocks", "env"],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "plugins": [],
    "paths": {}
  }
}
